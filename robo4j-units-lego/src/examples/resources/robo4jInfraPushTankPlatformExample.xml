<robo4j>
    <roboUnit id="buttons">
        <class>com.robo4j.units.lego.BrickButtonsUnit</class>
        <config name="com.robo4j.root">
            <value name="target" type="String">controller</value>
            <value name="button_right" type="String">right</value>
            <value name="button_left" type="String">left</value>
            <value name="button_up" type="String">up</value>
            <value name="button_down" type="String">down</value>
            <value name="button_enter" type="String">enter</value>
        </config>
    </roboUnit>
    <roboUnit id="lcd">
        <class>com.robo4j.units.lego.LcdUnit</class>
        <config name="com.robo4j.root">
        </config>
    </roboUnit>
    <roboUnit id="touchUnit">
        <class>com.robo4j.units.lego.TouchPlatformSpeedUnit</class>
        <config name="com.robo4j.root">
            <value name="lcdTarget" type="String">lcd</value>
            <value name="platformTarget" type="String">platform</value>
            <value name="sensorPort" type="String">S1</value>
        </config>
    </roboUnit>
    <roboUnit id="infraSensor">
        <class>com.robo4j.units.lego.InfraSensorUnit</class>
        <config name="com.robo4j.root">
            <value name="target" type="String">infraController</value>
            <value name="sensorPort" type="String">S2</value>
        </config>
    </roboUnit>
    <roboUnit id="infraController">
        <class>com.robo4j.units.lego.controller.InfraPlatformController</class>
        <config name="com.robo4j.root">
            <value name="target" type="String">controller</value>
            <value name="scanInitDelay" type="int">1000</value>
            <value name="scanPeriod" type="int">800</value>
        </config>
    </roboUnit>
    <roboUnit id="controller">
        <class>com.robo4j.units.lego.controller.PlatformController</class>
        <config name="com.robo4j.root">
            <value name="target" type="String">platform</value>
        </config>
    </roboUnit>
    <roboUnit id="platform">
        <class>com.robo4j.units.lego.SimpleTankUnit</class>
        <config name="com.robo4j.root">
            <value name="speed" type="int">200</value>
            <value name="leftMotorPort" type="String">B</value>
            <value name="leftMotorType" type="Character">N</value>
            <value name="rightMotorPort" type="String">C</value>
            <value name="rightMotorType" type="Character">N</value>
        </config>
    </roboUnit>
</robo4j>