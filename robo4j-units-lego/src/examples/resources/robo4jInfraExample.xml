<robo4j>
    <roboUnit id="lcd">
        <class>com.robo4j.units.lego.LcdUnit</class>
        <config name="com.robo4j.root">
        </config>
    </roboUnit>
    <roboUnit id="infraSensor">
        <class>com.robo4j.units.lego.InfraSensorUnit</class>
        <config name="com.robo4j.root">
            <value name="target" type="String">reportController</value>
            <value name="sensorPort" type="String">S2</value>
        </config>
    </roboUnit>
    <roboUnit id="reportController">
        <class>com.robo4j.units.lego.controller.ReportController</class>
        <config name="com.robo4j.root">
        </config>
    </roboUnit>
</robo4j>